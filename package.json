{
  "name": "adaptive-escrow-pro",
  "version": "1.0.0",
  "description": "AI-driven smart escrow platform on Stellar blockchain",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "setup": "./scripts/setup.sh",
    "deploy": "./scripts/deploy.sh",
    "seed": "cd backend && npm run seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/.next frontend/.next",
    "test": "echo 'No tests specified' && exit 0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "blockchain",
    "stellar",
    "soroban",
    "escrow",
    "ai",
    "smart-contracts",
    "web3",
    "freelance",
    "payments"
  ],
  "author": "Adaptive Escrow Pro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adaptive-escrow/adaptive-escrow-pro.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
